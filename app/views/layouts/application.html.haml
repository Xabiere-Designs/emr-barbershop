!!! 5
%html
  %head
    %title
      Emr-Barbershop
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      %h5.my-0.mr-md-auto.font-weight-normal 
        EMR-Barbershop
      %nav.my-2.my-md-0.mr-md-3
        = link_to 'Home', root_path, class: "p-2 text-dark"
        = link_to 'Users', users_path, class: "p-2 text-dark"
        %a.p-2.text-dark{href: "#"}
          Make Appointment
        %a.p-2.text-dark{href: "#"}
          Pricing
      - if !logged_in?
        %a.btn.btn-outline-primary{"data-toggle": "modal", "data-target": "#signUpModal"}
          Sign up
        %a.btn.btn-outline-success.ml-1{"data-toggle": "modal", "data-target": "#signInModal"}
          Login
      - else
        = link_to "#{current_user.name}", user_path(current_user), class: "p-2 text-dark"
        %a.p-2.text-dark{href: '/logout'}
          Logout
          

    .container
      - if alert.present?
        %p.notice.alert.alert-primary
          = alert
      = yield 
      = render partial: 'users/sign-up'
      = render partial: 'sessions/sign-in'
