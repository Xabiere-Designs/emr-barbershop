%h1
  Edit Barbershop
.row
  .col-lg-3
    .card.p-1
      %ul
        Sign in as:
        - if !current_barbershop
          - @barbershops.each do |barbershop|
            %li
              = link_to "#{barbershop.barbershop_name}", select_barbershop_path(barbershop), method: :post
        - if current_barbershop.present?
          = link_to "#{current_user.name}", barbershop_logout_path

.row
  .col-lg-3
    = link_to "Delete Account", barbershop_path(current_barbershop), method: :delete, data: { confirm: "Are you sure? Tears will be shead on this end" }, class: "btn btn-danger mt-3"
  .col-lg-9
    = render partial: 'edit'