.row
  .col
    %h1 
      Two Factor Authentication
    %hr
.row
  .col-lg-10
    - if alert.present?
      %p.notice.alert.alert-primary
        = alert
    = form_tag check_2fa_path, remote: true do 
      .field.form-group
        = label_tag :code, "Verification Code"
        %br
        = text_field_tag :token, '', class: "form-control", autofocus: true 

      .actions
        %button{type: :submit, class: "btn btn-success" } Login